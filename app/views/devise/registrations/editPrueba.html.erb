<style type="text/css">  
   .form-group {
   margin-bottom: 10px;
   }
</style>
    <div id="page-wrapper">
      <div class="container-fluid">
        <%= render 'shared/dosFilasVistas', tituloVentana: "Puebas Alérgicas del Paciente" %>
        <!-- Page Heading -->       
        <div class="row" style= "margin-top:25px">
          <div class="col-lg-2"></div>
          <div class="col-lg-8">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"></h3>
                <div style="text-align: center">
                  <h3 class="panel-title">Pruebas Alérgicas</h3>
                </div>
              </div><!-- panel -heading-->
              <div class="panel-body">
                <div class="list-group">
                <%puts "EDITPRUEBA VISTA"%>

                 <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>

                   <%=f.input :id, :as => :hidden, :input_html => { :value => @paciente.id } %>
                   <%=f.input :origen, :as => :hidden, :input_html => { :value => "editPrueba" } %>
                     
                     <%= f.error_notification %>

                      <% if @paciente.errors.any? %>
                    <div class="alert alert-danger">
                    <div class="error_explanation">
                      <ul>
                        <% resource.errors.each do |attr,msg| %>
                        <li><%= "#{msg}" if @usuario.errors[attr].first == msg %> </li>
                       <% end %>
                   
                      </ul>
                   
                    </div>
                  </div>
                  <%end %><!-- end if paciente.errors.any -->

  <div id="pruebas" >
  <br />
  <div class="form-group">
   <label class="string optional control-label col-md-3">Fecha de las pruebas:</label>
     <div class='input-group date col-md-3' id='datetimepicker2'>
     <input class="string optional form-control"  type="text" name="usuario[fecha_pruebas]" id="usuario_fecha_pruebas" value = <%=@paciente.fecha_pruebas %> />
     <span class="input-group-addon">
     <i class="fa fa-calendar"></i>
     </span>
     </div>
<br/>
  </div>

  <div class="form-group">
    <label class="control-label col-md-2">AVA:</label>
      <div class="col-md-1">             
      <%= f.input :ava, label: false, as: :string, :input_html => {value: @paciente.ava}%> 
    </div>
    <label class="control-label col-md-3">CUC:</label>
      <div class="col-md-1">             
      <%= f.input :cuc, label: false, as: :string, :input_html => {value: @paciente.cuc}%> 
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2">HONG:</label>
      <div class="col-md-1">             
      <%= f.input :hong, label: false, as: :string, :input_html => {value: @paciente.hong}%>     
    </div>
    <label class="control-label col-md-3">BERM:</label>
      <div class="col-md-1">             
      <%= f.input :berm, label: false, as: :string, :input_html => {value: @paciente.berm}%> 
      </div>
   </div>
   <div class="form-group">
    <label class="control-label col-md-2">JOHN:</label>
      <div class="col-md-1">             
      <%= f.input :john, label: false, as: :string, :input_html => {value: @paciente.john}%> 
    </div>
    <label class="control-label col-md-3">ASP:</label>
      <div class="col-md-1">             
      <%= f.input :asp, label: false, as: :string, :input_html => {value: @paciente.asp}%> 
    </div>
   </div>
   <div class="form-group">
    <label class="control-label col-md-2">BLOM:</label>
      <div class="col-md-1">             
      <%= f.input :blom, label: false, as: :string, :input_html => {value: @paciente.blom}%> 
    </div>
  </div>

</div><!-- id pruebas -->
                       
              
<div class="form-actions" align="center">
<%= f.button :submit, "Guardar", :class=> "btn btn-primary" %>
</div>
</div>
<% end %> 
</div><!-- panel body -->
            </div><!-- panel panel primary -->
         </div><!-- col lg 8 -->
         <div class="col-lg-2"></div>
         <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
   </div>
   <!-- /#page-wrapper -->
</div>



